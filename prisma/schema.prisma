generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LeetCodeStats {
  id     String  @id @default(uuid())
  userId String? @unique
  username        String   @unique
  realName        String?
  avatar          String?
  strength        Int
  mana            Int
  totalSolved     Int
  easySolved      Int
  mediumSolved    Int
  hardSolved      Int
  attendedContests Int
  rating          Float
  globalRanking   Int
  topPercentage   Float
  badge           String?
  contestHistory  Json
  createdAt       DateTime @default(now())
}

